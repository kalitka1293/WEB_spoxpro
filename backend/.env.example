# spoXpro Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
APP_NAME=spoXpro Backend
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Settings
DATABASE_URL=sqlite:///./spoxpro.db
DATABASE_ECHO=false

# JWT Settings (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/log_file/spoxpro.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Cookie Settings
COOKIE_MAX_AGE=2592000
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax